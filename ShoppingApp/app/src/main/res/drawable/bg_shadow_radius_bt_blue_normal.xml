<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#10000000" />
            <padding
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"
                android:left="1dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#20000000" />
            <padding
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"
                android:left="1dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <!-- content background -->
    <item>
        <shape>
            <solid android:color="@color/main_color" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>