<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shadow_radius"
    android:orientation="vertical"
    android:padding="@dimen/card_suggest_padding">

    <ImageView
        android:id="@+id/ivImageCardSuggest"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_card_list_height"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_small">

        <TextView
            android:id="@+id/tvNameCardSuggest"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Clean Master (Boost  Applock)"
            android:textColor="#000"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/tvStatusCardSuggest"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:text="MIỄN PHÍ"
            android:textColor="@color/main_color"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="italic" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvAuthorCardSuggest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text_hint_color"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="italic" />

    <leminhan.shoppingapp.ui.FullActionButton
        android:id="@+id/btActionVerticalBig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_small"
        android:paddingRight="@dimen/margin_small"
        android:paddingTop="@dimen/margin_small"
        android:layout_toRightOf="@+id/layoutImageThumbCardSuggest2"
        android:layout_alignBottom="@+id/layoutImageThumbCardSuggest2"></leminhan.shoppingapp.ui.FullActionButton>
</LinearLayout>