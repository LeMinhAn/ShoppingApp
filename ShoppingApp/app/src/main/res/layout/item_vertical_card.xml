<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvContainerColVerticalItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layoutImageThumbCardSuggest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/margin_small">

            <ImageView
                android:id="@+id/ivImageCardSuggest3"
                android:layout_width="@dimen/image_card_list_width_3"
                android:layout_height="@dimen/image_card_list_width_3" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvNameCardSuggest3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/layoutImageThumbCardSuggest2"
            android:layout_toRightOf="@+id/layoutImageThumbCardSuggest2"
            android:paddingTop="@dimen/margin_small"
            android:text="New Text App name"
            android:textColor="#000"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/tvAuthorCardSuggest3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNameCardSuggest3"
            android:layout_toRightOf="@+id/layoutImageThumbCardSuggest2"
            android:text="Author"
            android:textColor="@color/text_hint_color"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/tvShortDescriptionCardSuggest3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAuthorCardSuggest3"
            android:layout_toRightOf="@+id/layoutImageThumbCardSuggest2"
            android:singleLine="true"
            android:textColor="@color/text_hint_color"
            android:textSize="@dimen/text_size_small"
            android:textStyle="italic" />

        <RelativeLayout
            android:id="@+id/rlMenuCard3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_large"
            android:paddingLeft="@dimen/margin_large">

            <ImageView
                android:id="@+id/ivMenuCard3"
                android:layout_width="@dimen/button_context_menu"
                android:layout_height="@dimen/button_context_menu"
                android:padding="@dimen/margin_small"
                android:src="@drawable/ic_menu_card" />
        </RelativeLayout>

        <leminhan.shoppingapp.ui.FullActionButton
            android:id="@+id/btActionVertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/layoutImageThumbCardSuggest2"
            android:layout_toRightOf="@+id/layoutImageThumbCardSuggest2"
            android:paddingBottom="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small"></leminhan.shoppingapp.ui.FullActionButton>

    </RelativeLayout>
</android.support.v7.widget.CardView>